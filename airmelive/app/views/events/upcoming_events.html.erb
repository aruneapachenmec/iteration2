<br>

<div class="span12">
	<div class="span8 offset1">
		<section class="widget tiny_head">
			<h3>Upcoming Events </h3>
		</section>
	</div>
	<% @events.each do |t| %>
	<div class="span8 offset1">
		<section class="widget tiny_event">
			<header>
				<h4>
					<%= link_to t.eventname.upcase , upcoming_each_path(t),:style => 'text-decoration: none'  %> 
				</h4>
			</header>
			<%= image_tag t.avatar.url ,:class => 'image_show' %>
			<div class="body">
				<% if session[:user_id] %>
        			<% unless @user.email == "airmelive@gmail.com" %>
					<%= button_to "participate", upcoming_path(t), class: "btn btn-success" %><br><br>
				<% end %>
      			<% else %>
      				<%= button_to "participate", upcoming_path(t), class: "btn btn-success" %><br><br>
      			<% end %>
			</div>
		</section> 
	</div>
	<% end %>
</div>
