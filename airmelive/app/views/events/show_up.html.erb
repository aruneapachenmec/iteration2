<br>

<h4 align="center"><%= @event.eventname.upcase %></h4>
<div class="row">
	<div class="form-actions">
		<%= image_tag @event.avatar.url ,:class => 'image_show_up' %>
	</div>
</div>

<br><br>

<div class="row">  
	<div class="col-md-6 offset1">
  		<div class="form-actions">
			<legend class="section"><h4>DESCRIPTION</h4></legend>
			<p align="justify"><%= @event.description %></p>
			<%= button_to "participate", upcoming_path(@event), class: "btn btn-success" %>
		</div>
	</div>
  	<div class="col-md-4">
		<div class="form-actions" style="min-height:138px;">
			<legend class="section"><h4>RULES</h4></legend>
			<p align="center"><%=@event.rules%></p>
		</div>
	</div>
</div>

<br><br><br>

<div class="row"> 
	<div class="col-md-6 offset1">
		<div class="form-actions">
			<legend class="section"><h4>PARTICIPANTS</h4></legend>
			<div>
				<% count = 1 %>
				<% @users.each do |user| %>
					<p><%= count %> .<%= user.name %>&nbsp&nbsp&nbsp&nbsp<%= user.email %><br></p>
					<% count= count+1 %>
				<% end %>
			</div>
		</div> 
	</div>
</div>		






